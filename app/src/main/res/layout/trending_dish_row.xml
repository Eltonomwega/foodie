<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="260dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:id="@+id/ImgHolder"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/trendingImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/trendingName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Pesto Chicken"
        android:textColor="@android:color/black"
        android:fontFamily="@font/quicksand_light"
        android:textSize="20sp"
        android:layout_below="@+id/ImgHolder"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/IconTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        android:layout_below="@+id/trendingName"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/trendingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 Min"
        android:fontFamily="@font/quicksand_light"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/IconTime"
        android:layout_below="@+id/trendingName"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/IconTime"
        android:layout_marginLeft="10dp" />
</RelativeLayout>